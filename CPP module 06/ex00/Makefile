# Compiler and flags
CXX := c++
CXXFLAGS := -Wall -Wextra -Werror -std=c++98 -g

# Directories and file names
SRC_DIR := src
BUILD_DIR := build
TARGET := program

# Source files and object files
SRC := src/main.cpp src/ScalarConverter.cpp
OBJ := $(SRC:$(SRC_DIR)/%.cpp=$(BUILD_DIR)/%.o)
ARGS = 

all: $(TARGET)

$(TARGET): $(OBJ)
	$(CXX) $(CXXFLAGS) -o $@ $(OBJ)

$(BUILD_DIR)/%.o: $(SRC_DIR)/%.cpp | $(BUILD_DIR)
	$(CXX) $(CXXFLAGS) -c $< -o $@

$(BUILD_DIR):
	mkdir -p $(BUILD_DIR)

clean:
	rm -rf $(BUILD_DIR)

fclean: clean
	rm -f $(TARGET)

re: fclean all

rerun: re
	./$(TARGET)

run: all
	./$(TARGET) $(ARGS)

gdb: all
	gdb $(TARGET)

valgrind: all
	valgrind --leak-check=full --show-leak-kinds=all ./$(TARGET)

test: all
	./$(TARGET) a
	@echo "\n"
	./$(TARGET) A
	@echo "\n"
	./$(TARGET) 0
	@echo "\n"
	./$(TARGET) ""
	@echo "\n"
	./$(TARGET) 2
	@echo "\n"
	./$(TARGET) -123
	@echo "\n"
	./$(TARGET) +123
	@echo "\n"
	./$(TARGET) 123
	@echo "\n"
	./$(TARGET) 90
	@echo "\n"
	./$(TARGET) 123.0
	@echo "\n"
	./$(TARGET) +-123
	@echo "\n"
	./$(TARGET) sdgsdfgdsfgdsf
	@echo "\n"
	./$(TARGET) 2147483647
	@echo "\n"
	./$(TARGET) 214748364711111
	@echo "\n"
	./$(TARGET) +2147483647
	@echo "\n"
	./$(TARGET) 2147483648
	@echo "\n"
	./$(TARGET) +2147483648
	@echo "\n"
	./$(TARGET) +2147483649
	@echo "\n"
	./$(TARGET) +21474836423432423
	@echo "\n"
	./$(TARGET) -2147483648
	@echo "\n"
	./$(TARGET) -2147483649
	@echo "\n"
	./$(TARGET) -21474836411
	@echo "\n"
	./$(TARGET) 
	@echo "\n"
	./$(TARGET) 
	@echo "\n"

.PHONY: all clean fclean re rerun test run